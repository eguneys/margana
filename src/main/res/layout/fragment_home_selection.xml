<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/menu_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/spacing_nano"
    >

  <oyun.net.anagram.widget.HomeStatsView
      android:id="@+id/home_stats_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      />

  <Button
      android:id="@+id/play_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/spacing_quad"
      android:gravity="center"
      android:theme="@style/Anagram.ButtonTheme.PrimaryAction"
      android:elevation="@dimen/elevation_header"
      android:drawableLeft="@drawable/ic_play"
      android:background="@drawable/bg_home"
      android:textColor="@color/text_light"
      android:paddingLeft="@dimen/spacing_micro"
      android:paddingRight="@dimen/spacing_micro"
      android:text="@string/PLAY"
      android:textSize="@dimen/home_menu_text_size"
      android:clipToPadding="false"
      />
</LinearLayout>
