<layout>
  <data>
    <variable name="category" type="String"/>
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/category_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_fab"
                android:gravity="center_horizontal"
                android:foreground="@drawable/selector_subtle"
                android:orientation="horizontal"
                >
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/Anagram.TextAppearance.ListItem"
        android:elevation="@dimen/elevation_header"
        android:gravity="center"
        android:text="@{category}"
        android:layout_margin="@dimen/spacing_normal"
        android:paddingLeft="@dimen/spacing_double"
        android:paddingRight="@dimen/spacing_double"
        android:clipToPadding="false"
        android:background="@color/android:white"
        />
  </LinearLayout>
</layout>
