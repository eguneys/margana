<layout>
  <data>
    <variable name="category" type="oyun.net.anagram.model.Category"/>
  </data>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/category_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:foreground="@drawable/selector_subtle"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_item"
                >
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Anagram.TextAppearance.ListItem"
        android:elevation="@dimen/elevation_header"
        android:gravity="left|center_vertical"
        android:textColor="@color/text_dark"
        android:textSize="@dimen/big_text_size"
        android:padding="@dimen/spacing_double"
        />
    <TextView
        android:id="@+id/category_nbItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Anagram.TextAppearance.ListItem"
        android:elevation="@dimen/elevation_header"
        android:gravity="right|center_vertical"
        android:textColor="@color/text_light"
        android:textSize="@dimen/title_text_size"
        android:padding="@dimen/spacing_double"
        />
  </LinearLayout>
</layout>
