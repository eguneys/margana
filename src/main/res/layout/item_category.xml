    <!--     android:gravity="right|center_vertical" -->
    <!--     android:textColor="@color/text_light" -->
    <!--     android:textSize="@dimen/title_text_size" -->
    <!--     android:padding="@dimen/spacing_double" -->
    <!--     /> -->
  </RelativeLayout>
</layout>
