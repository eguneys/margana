<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Anagram" parent="Anagram.Base"/>

  <style name="Anagram.Base" parent="Theme.AppCompat.Light.NoActionBar">
    
  </style>

  <style name="Anagram.MainActivity"/>
  <style name="Anagram.CategorySelectionActivity"/>
  <style name="Anagram.QuizActivity"/>

  <style name="Anagram.Red">
    <item name="colorPrimary">@color/theme_red_primary</item>
    <item name="colorPrimaryDark">@color/theme_red_primary</item>
    <item name="android:textColorPrimary">@color/theme_red_primary</item>
    <item name="android:statusBarColor">@color/theme_red_primary_dark</item>
    <item name="android:windowBackground">@color/theme_red_background</item>
    <item name="colorAccent">@color/theme_red_accent</item>
  </style>

  <style name="Anagram.ButtonTheme"/>

  <style name="Anagram.ButtonTheme.Primary" parent="Theme.AppCompat.Light">
    <item name="android:colorControlHighlight">@color/anagram_primary_dark</item>
    <item name="android:colorButtonNormal">@color/anagram_primary</item>
  </style>
  <style name="Anagram.ButtonTheme.PrimaryAction" parent="Theme.AppCompat.Light">
    <item name="android:textSize">@dimen/title_text_size</item>
    <item name="android:padding">@dimen/spacing_double</item>
  </style>

  <style name="Anagram.TextAppearance"/>

  <style name="Anagram.TextAppearance.CategoryItem" parent="TextAppearance.AppCompat.Small">
    <item name="android:textSize">@dimen/category_item_text_size</item>
  </style>

  <style name="Anagram.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/anagram_primary</item>
  </style>

  <style name="Anagram.TextAppearance.Title.Inverse" parent="Anagram.TextAppearance.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Anagram.TextAppearance.ListItem" parent="TextAppearance.AppCompat.Subhead"/>


</resources>
