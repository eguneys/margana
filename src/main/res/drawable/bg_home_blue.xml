<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
  <shape
      android:shape="rectangle">
    <solid android:color="@color/letter_shadow"/>
    <corners 
        android:bottomRightRadius="@dimen/radius_small"
        android:bottomLeftRadius="@dimen/radius_small"
        android:topRightRadius="@dimen/radius_small"
        android:topLeftRadius="@dimen/radius_small"/>
  </shape>  
</item>
<item android:bottom="@dimen/spacing_micro">
  <shape
      android:shape="rectangle">
    <solid android:color="@color/letter_background"/>
    <corners
        android:bottomRightRadius="@dimen/radius_small"
        android:bottomLeftRadius="@dimen/radius_small"
        android:topRightRadius="@dimen/radius_small"
        android:topLeftRadius="@dimen/radius_small"/>
  </shape>
</item>
</layer-list>
