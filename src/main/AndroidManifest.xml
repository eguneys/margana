<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="oyun.net.anagram"
      android:versionCode="1"
      android:versionName="1.0">
    <application
        android:name="Application"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Anagram"
        >
      <activity android:name=".activity.MainActivity"
                android:theme="@style/Anagram.MainActivity"
                android:screenOrientation="portrait"
                >
        <intent-filter>
          <action android:name="android.intent.action.MAIN" />
          <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
      </activity>
      <activity android:name=".activity.HomeSelectionActivity"
                android:theme="@style/Anagram.HomeSelectionActivity"
                android:screenOrientation="portrait"
                />
      <activity android:name=".activity.CategorySelectionActivity"
                android:theme="@style/Anagram.CategorySelectionActivity"
                android:screenOrientation="portrait"
                />
      <activity android:name=".activity.QuizActivity"
                android:launchMode="singleTop"
                android:theme="@style/Anagram.QuizActivity"
                android:screenOrientation="portrait"
                />
    </application>
</manifest>
